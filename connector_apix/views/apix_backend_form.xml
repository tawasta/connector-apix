<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_apix_backend_form" model="ir.ui.view">
        <field name="name">apix.backend.form</field>
        <field name="model">apix.backend</field>
        <field name="arch" type="xml">
            <form string="Apix Backend">
                <header>
                    <button
                        name="action_authenticate"
                        type="object"
                        class="oe_highlight"
                        string="Authenticate"
                        attrs="{'invisible': [('state', '=', 'confirmed')]}"
                    />

                    <button
                        name="action_reset_authentication"
                        type="object"
                        class=""
                        string="Reset authentication"
                        attrs="{'invisible': [('state', '=', 'unconfirmed')]}"
                    />

                    <button
                        name="action_einvoice_fetch"
                        type="object"
                        class="oe_highlight"
                        string="Fetch invoices"
                    />

                    <button
                        name="action_einvoice_refetch"
                        type="object"
                        class="oe_highlight"
                        string="Refetch invoices"
                    />

                    <field name="state" widget="statusbar" />
                </header>

                <sheet>
                    <label for="name" class="oe_edit_only" />
                    <h1>
                        <field name="name" class="oe_inline" />
                    </h1>
                    <group
                        name="odoo_configuration"
                        string="Odoo Configuration"
                        groups="base.group_erp_manager"
                    >
                        <field name="support_email" />
                        <field
                            name="use_invoice_template"
                            widget="boolean_toggle"
                        />
                        <field
                            name="invoice_template_id"
                            attrs="{'invisible': [('use_invoice_template', '=', False)]}"
                        />
                        <field
                            name="use_attachments"
                            attrs="{'invisible': [('use_invoice_template', '=', False)]}"
                            widget="boolean_toggle"
                        />
                    </group>

                    <group
                        name="apix_configuration"
                        string="Apix Configuration"
                    >
                        <notebook>
                            <page name="api" string="API">
                                <group
                                    name="api_settings"
                                    groups="base.group_erp_manager"
                                >
                                    <group>
                                        <field name="username" />
                                        <field name="password" password="1" />
                                        <field name="prefix" />
                                    </group>
                                    <group>
                                        <field name="company_id" />
                                        <field name="version" />
                                        <field name="environment" />
                                    </group>
                                </group>

                                <group
                                    name="api_transfer"
                                    groups="base.group_system"
                                >
                                    <field name="transfer_id" />
                                    <field name="transfer_key" />
                                    <field name="company_uuid" />
                                    <field name="business_id" />
                                    <field name="id_qualifier" />
                                </group>
                            </page>

                            <page name="info" string="Info">
                                <group>
                                    <field
                                        name="customer_id"
                                        invisible='1'
                                    /> <!-- This is identical with customer number -->
                                    <field name="customer_number" />
                                    <field name="contact_person" />
                                    <field name="contact_email" />
                                    <field name="owner_id" />
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
